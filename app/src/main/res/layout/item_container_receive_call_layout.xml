<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:padding="4dp"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/contacts_selector"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/Circular"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/receive_message_bg"
        app:layout_constraintStart_toEndOf="@id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintWidth_max="wrap"
        >
        <TextView
            android:id="@+id/receive_call_layout_text_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Cuộc gọi video đi"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ic_call"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/fontawesome_pro_solid900"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="\uf03d"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/receive_call_layout_text_datetime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8sp"
                android:text="12 phút"
                android:layout_gravity=""

                />
        </LinearLayout>
    </LinearLayout>
