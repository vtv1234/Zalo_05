<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:padding="4dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/send_message_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="vertical"
        app:layout_constraintWidth_max="wrap"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        >
        <TextView
            android:id="@+id/sent_call_layout_tv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Cuộc gọi video đi"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ic_call"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/fontawesome_pro_solid900"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="\uf03d"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/sent_call_layout_text_datetime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8sp"
                android:text="12 phút"
                android:layout_gravity=""
                android:layout_marginStart="10dp"

                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



