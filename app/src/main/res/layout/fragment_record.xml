<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat.Fragments.RecordFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.devlomi.record_view.RecordView
        android:id="@+id/fragment_record.record_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:slide_to_cancel_text="Di chuyển sang trái để xóa"
        android:visibility="visible"
        app:slide_to_cancel_arrow_color="@color/black"
        app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
        />

    <com.devlomi.record_view.RecordButton
        android:id="@+id/fragment_record.record_button"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:mic_icon="@drawable/ic_microphone_light"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:tint="@color/black"
        android:alpha="0.7"
        android:scaleType="center"
        android:layout_gravity="center"
        />

</FrameLayout>